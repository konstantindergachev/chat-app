{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "Chat application",
  "main": "index.js",
  "scripts": {
    "all": "npm-run-all -p start  lint:w",
    "start": "node functions/app.js",
    "dev": "node --watch functions/app.js",
    "lint": "esw webpack.config.* server public/js/validate.js",
    "lint:w": "npm run lint -- --watch",
    "test": "mocha functions/**/*.test.js",
    "test-watch": "nodemon --exec 'npm test'",
    "build": "netlify deploy --prod"
  },
  "engines": {
    "node": "18.18.0"
  },
  "author": "Konstantin Dergachev",
  "license": "ISC",
  "dependencies": {
    "express": "4.19.2",
    "netlify-cli": "^17.34.0",
    "netlify-lambda": "^2.0.16",
    "serverless-http": "^3.2.0",
    "socket.io": "4.7.5"
  },
  "devDependencies": {
    "eslint": "4.14.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-watch": "3.1.3",
    "expect": "1.20.2",
    "mocha": "3.5.0",
    "npm-run-all": "4.1.2",
    "socket.io-client": "4.7.5"
  }
}
